@model PersonalFinance.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Password Reset";
}

<div class="container-center animated slideInDown">
    <div class="view-header">
        <div class="header-icon">
            <i class="pe page-header-icon pe-7s-unlock"></i>
        </div>
        <div class="header-title">
            <h3>Reset Your Password</h3>
        </div>
    </div>
    <div class="container-fluid">
        <div class="panel panel-filled">
            <div class="panel-body">
                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.HiddenFor(model => model.Code)

                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <form>
                        <row class="col-xs-10 col-xs-offset-1">
                            <div class="form-group">
                                <label class="control-label">Email</label>
                                <div>
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </row>
                        <row class="col-xs-10 col-xs-offset-1">
                            <div class="form-group">
                                <label class="control-label">Password</label>
                                <div>
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @name = "password" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </row>
                        <row class="col-xs-10 col-xs-offset-1">
                            <div class="form-group">
                                <label class="control-label">Re-Enter Password</label>
                                <div>
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @name = "password" })
                                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </row>
                        <div class="col-sm-10 col-xs-offset-1">
                            <input type="submit" class="btn btn-block btn-info" value="Reset" />
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>
