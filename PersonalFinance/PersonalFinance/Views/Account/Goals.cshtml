@{
    ViewBag.Title = "Goals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (ViewBag.Message != null)
{
    <div class="alert alert-success container-fluid col-md-4 col-md-offset-4" role="alert">
        <b>Great! </b><span>@ViewBag.Message</span>
    </div>
}
<div class="row">
    <div class="col-lg-12">
        <div class="view-header">
            <div class="header-icon">
                <i class="pe page-header-icon fa fa-signal"></i>
            </div>
            <div class="header-title">
                <h3>Goals</h3>
                <small>
                    Money, cash and clothes that's all a player knows....and fiscal responsibility
                </small>
            </div>
        </div>
        <hr />
    </div>
</div>
<div class="row">
    <div class=" col-sm-8 col-sm-offset-2">
        <div class="panel">
            <div class="panel-header text-center">
                <h3 class="text-accent">Make a Diamond Out of Those Dusty Goals</h3>
                <p class="c-white">Now that you know your monthly cash flow, let's think about your goals </p>
                <hr />
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="animated slideInUp">
            <ul class="list-unstyled">
                <li class="col-sm-4 col-sm-offset-2 panel support-question">
                    <a href="#save" data-toggle="tab">
                        <div class="h1 text-center">
                            <div class="text-accent pe-7s-diamond"></div>
                            <div>
                                <h3>Save Money</h3>
                            </div>
                        </div>
                        <div class="text-center">
                            <small class="c-accent">Making money is the game, but holding on to it is what it's all about</small>
                        </div>
                        <br />
                    </a>
                </li>
                <li class="col-sm-4 panel support-question">
                    <a href="#debt" data-toggle="tab">
                        <div class="h1 text-center">
                            <div class="text-accent page-header-icon pe-7s-graph1"></div>
                            <div>
                                <h3>Payoff Debt</h3>
                            </div>
                        </div>
                        <div class="text-center">
                            <small class="c-accent">A powerful tool - but with great power comes great responsibility</small>
                        </div>
                        <br />
                    </a>
                </li>
            </ul>
            <div class="row">
                <div class="panel">
                    <div class="panel-body">
                        <div class="tab-content">
                            <div id="save" class="tab-pane">
                                <ul class="list-unstyled">
                                    <li class="col-sm-3 panel support-question">
                                        <a href="#" data-toggle="tab">
                                            <div class="h1 text-center">
                                                <div class="text-accent page-header-icon fa fa-rocket"></div>
                                                <div>
                                                    <h3>Nest Egg</h3>
                                                </div>
                                            </div>
                                            <div class="text-center">
                                                <small class="c-accent">It's never a bad idea to put some money away for a rainy day</small>
                                            </div>
                                            <br />
                                        </a>
                                    </li>
                                    <li class="col-sm-3 panel support-question">
                                        <a href="#" data-toggle="tab">
                                            <div class="h1 text-center">
                                                <div class="text-accent page-header-icon fa fa-motorcycle"></div>
                                                <div>
                                                    <h3>Something Rad</h3>
                                                </div>
                                            </div>
                                            <div class="text-center">
                                                <small class="c-accent">Save up for that house, boat, house-boat or a sweet ride</small>
                                            </div>
                                            <br />
                                        </a>
                                    </li>
                                    <li class="col-sm-3 panel support-question">
                                        <a href="#" data-toggle="tab">
                                            <div class="h1 text-center">
                                                <div class="text-accent page-header-icon fa fa-binoculars"></div>
                                                <div>
                                                    <h3>Retirement</h3>
                                                </div>
                                            </div>
                                            <div class="text-center">
                                                <small class="c-accent">Around the corner or a few decades away - you'll thank youself for putting some extra away</small>
                                            </div>
                                            <br />
                                        </a>
                                    </li>
                                    <li class="col-sm-3 panel support-question">
                                        <a href="#" data-toggle="tab">
                                            <div class="h1 text-center">
                                                <div class="text-accent page-header-icon fa fa-graduation-cap"></div>
                                                <div>
                                                    <h3>Education</h3>
                                                </div>
                                            </div>
                                            <div class="text-center">
                                                <small class="c-accent">For yourself or someone else, education can be expensive</small>
                                            </div>
                                            <br />
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <div id="debt" class="tab-pane">
                                <ul class="list-unstyled">
                                    <li class="col-sm-4 col-sm-offset-4 panel support-question">
                                        <a href="#" data-toggle="tab">
                                            <div class="h1 text-center">
                                                <div class="text-accent page-header-icon fa fa-rocket"></div>
                                                <div>
                                                    <h3>Nest Egg</h3>
                                                </div>
                                            </div>
                                            <div class="text-center">
                                                <small class="c-accent">It's never a bad idea to put some money away for a rainy day</small>
                                            </div>
                                            <br />
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>