<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='http://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900' rel='stylesheet' type='text/css'>
    <!-- Page title -->
    <title>FinanSeer | @ViewBag.Title</title>
    <!-- Vendor styles -->
    <link rel="stylesheet" href="~/Content/vendor/fontawesome/css/font-awesome.css" />
    <link rel="stylesheet" href="~/Content/vendor/animate.css/animate.css" />
    <link rel="stylesheet" href="~/Content/vendor/bootstrap/css/bootstrap.css" />
    <!-- App styles -->
    <link rel="stylesheet" href="~/Content/styles/pe-icons/pe-icon-7-stroke.css" />
    <link rel="stylesheet" href="~/Content/styles/pe-icons/helper.css" />
    <link rel="stylesheet" href="~/Content/styles/stroke-icons/style.css" />
    <link rel="stylesheet" href="~/Content/styles/style.css">
</head>
<body>
    <!-- Navigation -->
    @if (Request.IsAuthenticated)
    {
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" data-toggle="collapse" data-target=".luna-nav" href="@Url.Action("Main","Dashboard")">
                        FinanSeer
                        <span>v.1.0</span>
                    </a>
                    <div class="nav navbar-right luna-nav">
                        <div>
                            @Html.Partial("_LoginPartial")
                        </div>
                    </div>
                </div>

            </div>
        </nav>
        <br />
        <br />
        <br />
                <br />
    }
    @if (!Request.IsAuthenticated)
    {
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" data-toggle="collapse" data-target=".luna-nav" href="@Url.Action("Main","Dashboard")">
                        FinanSeer
                        <span>v.1.0</span>
                    </a>
                    <div class="nav navbar-right luna-nav">
                        <div>
                            @Html.Partial("_LoginPartial")
                        </div>
                    </div>
                </div>

            </div>
        </nav>
        <br />
        <br />
        <br />
        <br />
    }
    <div class="container-fluid">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - DataHive Analytics</p>
        </footer>
    </div>

    @Scripts.Render("~/Content/vendor/sparkline/index.js")
    @Scripts.Render("~/Content/vendor/chart.js/dist/Chart.min.js")
    @Scripts.Render("~/Scripts/luna.js")
    @Scripts.Render("//cdn.jsdelivr.net/momentjs/latest/moment.min.js")
    @Scripts.Render("~/Scripts/daterangepicker.js")
    @Scripts.Render("~/Content/vendor/DataTables/datatables.min.js")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)


</body>
</html>
