@if (Request.IsAuthenticated)
{
    <body class="pace-done">
        <!-- Wrapper-->
        <div class="wrapper">
            <!-- Navigation -->

            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
            {
                @Html.AntiForgeryToken()
                <nav class="navbar navbar-default navbar-fixed-top">
                    <div class="container-fluid">
                        <div class="navbar-header">
                            <div id="mobile-menu">
                                <div class="left-nav-toggle">
                                    <a href="#">
                                        <i class="stroke-hamburgermenu"></i>
                                    </a>
                                </div>
                            </div>
                            <a class="navbar-brand" href="@Url.Action("Main", "Dashboard")">
                                FinanSeer
                                <span>v1.0</span>
                            </a>
                        </div>
                        <div id="navbar" class="navbar-collapse collapse">
                            <div class="left-nav-toggle">
                                <a href="">
                                    <i class="stroke-hamburgermenu"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </nav>
                <aside class="navigation">
                    <nav>
                        <ul class="nav luna-nav">
                            <li>
                                <a href="#account" data-toggle="collapse" aria-expanded="false">
                                    My Account<span class="sub-nav-icon"> <i class="stroke-arrow"></i> </span>
                                </a>
                                <ul id="account" class="nav nav-second collapse">
                                    <li>@Html.ActionLink("Synced Accounts", "AccountSync", "Account", routeValues: null, htmlAttributes: new { title = "Synced Accounts" })</li>
                                    <li>@Html.ActionLink("Account Settings", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Account Settings" })</li>
                                </ul>
                            </li>
                            <li class="navbar-header"><a href="javascript:document.getElementById('logoutForm').submit()">Log Out</a></li>
                        </ul>
                    </nav>
                </aside>
            }

            <section class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>
        </div>

    </body>
}
@if (!Request.IsAuthenticated)
{
    <body>
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="@Url.Action("Main", "Dashboard")">
                        FinanSeer
                        <span>v1.0</span>
                    </a>
                </div>
            </div>
        </nav>
        @RenderBody()
    </body>
}
