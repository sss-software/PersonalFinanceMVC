@model PersonalFinance.Models.AddPhoneNumberViewModel
@{
    ViewBag.Title = "Further Verification";
}

<div class="container-center animated slideInDown">
    <div class="view-header">
        <div class="header-icon">
            <i class="pe page-header-icon pe-7s-door-lock"></i>
        </div>
        <div class="header-title">
            <h3>SMS Verification</h3>
            <small>
                Submit your phone number below for further verification. This will be the number used for future SMS notifications.
            </small>
        </div>
    </div>
    <div class="panel panel-filled">
        <div class="panel-body">
            <p>
            </p>
            <section id="loginForm">
                @using (Html.BeginForm("AddPhoneNumber", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="row">
                        <div>
                            <label class="col-md-12">Phone Number</label>
                            <div class="col-md-12">
                                @Html.TextBoxFor(m => m.Number, new { @class = "form-control", @placeholder = "xxx-xxx-xxxx" })
                            </div>
                            <span class="help-block small col-md-12"></span>
                        </div>

                    </div>
                    <div>
                        <input type="submit" class="btn btn-accent" value="Send Verification Code" />
                    </div>
                }
            </section>
        </div>
    </div>
</div>

