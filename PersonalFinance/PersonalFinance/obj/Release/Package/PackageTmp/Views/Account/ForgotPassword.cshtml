@model PersonalFinance.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}


<body class="blank">
    <!-- Wrapper-->
    <div class="wrapper">
        <!-- Main content-->
        <section>
            <div class="container-center animated slideInDown">
                <div class="view-header">
                    <div class="header-icon">
                        <i class="pe page-header-icon pe-7s-rocket"></i>
                    </div>
                    <div class="header-title">
                        <h3>Forgot Your Password?</h3>
                        <small>
                            No problem. Enter your email address below and we'll get you back up and running.
                        </small>
                    </div>
                </div>
                <div class="panel panel-filled">
                    <div class="panel-body">
                        <p>
                        </p>
                        <section id="loginForm" class="col-md-12">
                            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary("", new { @class = "text-danger" })
                                <div class="row">
                                    <div>
                                        <label class="col-md-12">Email</label>
                                        <div class="col-md-12">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                        </div>
                                        <span class="help-block small col-md-12">Enter your email address and we'll send out a reset link.</span>
                                    </div>
                                <div>
                                    <a class="btn btn-accent pull-left" href="@Url.Action("Login","Account")">Back to Login</a>
                                    <input type="submit" class="btn btn-info pull-right" value="Email Link" />
                                </div>
                                    </div>
                            }
                        </section>
                    </div>
                </div>
            </div>
        </section>
        <!-- End main content-->
    </div>
</body>
