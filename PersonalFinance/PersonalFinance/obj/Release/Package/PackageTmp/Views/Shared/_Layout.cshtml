
<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Page title -->
    <title>FinanSeer | @ViewBag.Title</title>

    <script src='https://www.google.com/recaptcha/api.js'></script>

    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/css_all")
    @Scripts.Render("~/bundles/scripts_all")
</head>
@if (Request.IsAuthenticated)
{
    <body class="pace-done">
        <!-- Wrapper-->
        <div class="wrapper">
            <!-- Navigation -->

            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
            {
                @Html.AntiForgeryToken()
                <nav class="navbar navbar-default navbar-fixed-top">
                    <div class="container-fluid">
                        <div class="navbar-header">
                            <div id="mobile-menu">
                                <div class="left-nav-toggle">
                                    <a href="#">
                                        <i class="stroke-hamburgermenu"></i>
                                    </a>
                                </div>
                            </div>
                            <a class="navbar-brand" href="@Url.Action("Main", "Dashboard")">
                                FinanSeer
                                <span>v1.0</span>
                            </a>
                        </div>
                        <div id="navbar" class="navbar-collapse collapse">
                            <div class="left-nav-toggle">
                                <a href="">
                                    <i class="stroke-hamburgermenu"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </nav>
                <aside class="navigation">
                    <nav>
                        <ul class="nav luna-nav">
                            <li>
                                <a href="#account" data-toggle="collapse" aria-expanded="false">
                                    My Account<span class="sub-nav-icon"> <i class="stroke-arrow"></i> </span>
                                </a>
                                <ul id="account" class="nav nav-second collapse">
                                    <li>@Html.ActionLink("Synced Accounts", "AccountSync", "Account", routeValues: null, htmlAttributes: new { title = "Synced Accounts" })</li>
                                    <li>@Html.ActionLink("Account Settings", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Account Settings" })</li>
                                </ul>
                            </li>
                            <li class="navbar-header"><a href="javascript:document.getElementById('logoutForm').submit()">Log Out</a></li>
                        </ul>
                    </nav>
                </aside>
            }

            <section class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>
        </div>

    </body>
}
@if (!Request.IsAuthenticated)
{
    <body>
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="@Url.Action("Main", "Dashboard")">
                        FinanSeer
                        <span>v1.0</span>
                    </a>
                </div>
            </div>
        </nav>
        @RenderBody()
    </body>
}
